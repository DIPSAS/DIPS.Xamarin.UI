<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:DIPS.Xamarin.UI.Samples.Controls;assembly=DIPS.Xamarin.UI.Samples"
             mc:Ignorable="d"
             x:Class="DIPS.Xamarin.UI.Samples.Controls.ControlsPage"
             x:DataType="Controls:ControlsViewModel"
             Title="Controls">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Popup" 
                    Command="{Binding NavigateToCommand}" 
                    CommandParameter="Popup"  />
            <Button Text="DatePicker"
                    Command="{Binding NavigateToCommand}"
                    CommandParameter="DatePicker" />
            <Button Text="TimePicker"
                    Command="{Binding NavigateToCommand}"
                    CommandParameter="TimePicker" />
            <Button Text="RadioButtonGroup"
                    Command="{Binding NavigateToCommand}"
                    CommandParameter="RadioButtonGroup" />
            <Button Text="Trend graph"
                    Command="{Binding NavigateToCommand}"
                    CommandParameter="TrendGraph" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>